
{{#each posts}}
<div class="row mb-4 post">
  <div class="card col-sm-12 col-md-12 col-lg-12 bg-dark" style="width: 18rem;">
    <div class="card-body">
      <h2 class="card-title"><a href="/post/{{id}}">{{title}}</a></h2>
      <h6 class="card-subtitle mb-2 text-muted">Created by {{user.name}} on {{format_date date_created}}</h6>
      <p class="card-text">{{content}}</p>
      <a href="/post/{{id}}">View comments</a>
    </div>
  </div>
</div>
{{/each}}